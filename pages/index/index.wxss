page {
  background-color: #e0f7fa; /* 背景改为浅蓝色 */
  font-family: 'Alibaba PuHuiTi', sans-serif;
}

/* 基础样式 */
.beehive-container {
  padding: 20rpx;
  background-color: #e0f7fa; /* 背景改为浅蓝色 */
  min-height: 100vh;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}
.status-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 标题 */
.header-wrapper {
  background: linear-gradient(135deg, #03a9f4 0%, #00796b 100%); /* 蓝色渐变 */
  color: white;
  padding: 48rpx;
  margin: 32rpx 16rpx;
  width: calc(100% - 32rpx);
  box-sizing: border-box;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 121, 107, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-title {
  font-size: 38rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

/* 数据显示 */
.data-container {
  margin-top: 36rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 36rpx;
}

.data-item {
  background-color: #fff;
  border-radius: 36rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.data-picture {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.data-text {
  flex: 1;
}

.data-title {
  font-size: 28rpx;
  color: #888;
}

.data-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 控制卡片 */
/* 输入框样式 */
.input {
  width: 90%;
  padding: 24rpx;
  margin: 32rpx auto;
  background: #fff;
  border-radius: 12rpx;
  border: 1px solid #b3e5fc; /* 蓝色边框 */
  font-size: 32rpx;
  color: #00796b; /* 蓝色字体 */
}

.input-placeholder {
  color: #81d4fa !important; /* 浅蓝色占位符 */
}

/* 按钮样式 */
.button-container {
  display: flex;
  gap: 24rpx;
  margin: 32rpx 24rpx;
}

.button1,.button2{
  flex: 1;
  padding: 24rpx;
  background: linear-gradient(135deg, #03a9f4 0%, #00796b 100%); /* 蓝色渐变 */
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 121, 107, 0.2);
  transition: all 0.3s;
}

.button1:active, .button2:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

/* 数据卡片样式 */
.data-wrapper {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.data {
  background: white;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(3, 169, 244, 0.1);
}

.data-logo {
  width: 96rpx;
  height: 96rpx;
  filter: hue-rotate(180deg); /* 调整为蓝色系图标 */
}

.data-title {
  font-size: 28rpx;
  color: #616161;
  margin-bottom: 8rpx;
}

.data-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #00796b; /* 蓝色字体 */
}

/* 阈值显示样式 */
.VALUE {
  background: white;
  padding: 24rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(3, 169, 244, 0.1);
}

.vlaue {
  color: #00796b; /* 蓝色字体 */
  font-size: 30rpx;
  padding: 12rpx 24rpx;
  background: #e0f7fa; /* 浅蓝色背景 */
  border-radius: 8rpx;
}

/* 分割线样式 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #b3e5fc 50%, transparent 100%); /* 蓝色分割线 */
  margin: 40rpx 24rpx;
}
/* 异常信息标题 */
.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.alert-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.alert-status {
  font-size: 28rpx;
  color: #07C160; /* 绿色表示正常 */
}

/* 异常状态容器 */
.alert-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.alert-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
  color: #E64340; /* 红色表示异常 */
}

