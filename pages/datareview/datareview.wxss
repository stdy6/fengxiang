.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.chart-container {
  width: 100%;
  height: 400px;
}

.chart {
  width: 100%;
  height: 100%;
}

.query-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.picker {
  margin: 10px 0;
  padding: 5px;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  margin-top: 10px;
  padding: 5px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}