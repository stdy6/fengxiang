<view class="container">
  <view class="query-container">
    <picker mode="date" value="{{startDate}}" start="2024-01-01" end="2025-12-31" bindchange="onStartDateChange">
      <view class="picker">开始时间：{{startDate}}</view>
    </picker>
    <picker mode="date" value="{{endDate}}" start="2024-01-01" end="2025-12-31" bindchange="onEndDateChange">
      <view class="picker">结束时间：{{endDate}}</view>
    </picker>
    <button bindtap="queryData">查询</button>
  </view>
  <view class="chart-container">
    <ec-canvas id="chart" canvas-id="chart" style="width: 100%; height: 400px;"></ec-canvas>
  </view>
</view>